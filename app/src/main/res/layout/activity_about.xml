<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/TxtView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muhammad Iqbal Dzulfikry"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:textSize="14dp"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="7.3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="14.5dp">

            <View
                android:layout_width="2dp"
                android:layout_height="225dp"
                android:background="#38b5f2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="35.6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="19dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.3dp"
                        android:gravity="center_horizontal"
                        android:text="About Me"
                        android:textColor="#333232"
                        android:textSize="13.7sp" />

                    <TextView
                        android:id="@+id/TxtView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12.3dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:text="Saya adalah orang yang terbiasa bersosialisasi, bertemu dengan berkerja sama dengan orang baru tidak menjadi masalah bagi saya. Selain itu saya dikenal sebagai seorang pendengar yang baik bukan hanya bagi rekan-rekan namun juga rekanan.
Saya adalah seseorang yang bisa mengambil keputusan tepat bahkan saat dalam tekanan. Setiap pekerjaan yang ada selalu saya kerjakan dengan detail dan selesai tepat waktu."/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="14.5dp">

            <View
                android:layout_width="5.6dp"
                android:layout_height="365dp"
                android:background="#38b5f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="35.6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="19dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20.3dp"
                        android:gravity="center_horizontal"
                        android:text="contact"
                        android:textColor="#333232"
                        android:textSize="13.7sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/imgPhone"
                            android:layout_width="25.8dp"
                            android:layout_height="25.8dp"
                            android:layout_marginTop="20.3dp"
                            android:background="@drawable/ic_whatsapp" />

                        <TextView
                            android:id="@+id/txtPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+628216312159"
                            android:layout_marginTop="20.3dp"
                            android:layout_marginLeft="10.3dp"
                            android:layout_toRightOf="@+id/imgPhone" />

                        <TextView
                            android:id="@+id/imgEmail"
                            android:layout_width="25.8dp"
                            android:layout_height="25.8dp"
                            android:layout_marginTop="12.3dp"
                            android:background="@drawable/ic_gmail"
                            android:layout_below="@id/imgPhone"/>

                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="fikrydzoel98@gmail.com"
                            android:layout_marginTop="12.3dp"
                            android:layout_marginLeft="10.3dp"
                            android:layout_toRightOf="@+id/imgEmail"
                            android:layout_below="@id/imgPhone"/>

                        <TextView
                            android:id="@+id/imgInstagram"
                            android:layout_width="25.8dp"
                            android:layout_height="25.8dp"
                            android:layout_marginTop="12.3dp"
                            android:background="@drawable/ic_instagram"
                            android:layout_below="@id/imgEmail"/>

                        <TextView
                            android:id="@+id/txtInstagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ikbal_dzulfikry"
                            android:layout_marginTop="12.3dp"
                            android:layout_marginLeft="10.3dp"
                            android:layout_toRightOf="@+id/imgInstagram"
                            android:layout_below="@id/imgEmail"/>

                        <TextView
                            android:id="@+id/imgFacebook"
                            android:layout_width="25.8dp"
                            android:layout_height="25.8dp"
                            android:layout_marginTop="12.3dp"
                            android:background="@drawable/ic_facebook"
                            android:layout_below="@id/imgInstagram"/>

                        <TextView
                            android:id="@+id/txtFacebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Muhammad Iqbal Dzulfikry"
                            android:layout_marginTop="12.3dp"
                            android:layout_marginLeft="10.3dp"
                            android:layout_toRightOf="@+id/imgFacebook"
                            android:layout_below="@id/imgInstagram"/>

                    </RelativeLayout>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="15sp"/>

        </LinearLayout>



</ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>